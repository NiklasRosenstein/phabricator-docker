version: '3'
services:
  phab:
    build:
      context: .
      args:
        - PHAB_BASE_URI=https://phab.example.com
        - PHAB_REPO_PATH=/var/repo
        - PHAB_TIMEZONE=Europe/Berlin
        - PHP_POST_MAX_SIZE=32MB
    ports:
      - "127.0.0.1:8012:80"
    volumes:
      - ./.data/repos:/var/repo
      - ./.data/mysql:/var/lib/mysql/
